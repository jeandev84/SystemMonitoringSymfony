{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}

<div class="container">
    <h1 class="my-5 text-center">Dashboard</h1>
    <div class="d-flex justify-content-around my-5">
        <a href="{{ path('website.analyze') }}" class="btn btn-info">
            <i class="fas fa-tools"></i>
            Lancer le diagnostic
        </a>
        <a href="{{ path('admin.new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i>
            Ajout un site
        </a>
        <a href="{{ path('website.clean') }}" class="btn btn-warning">
            <i class="fas fa-sync-alt"></i>
            Nettoyer l'historique
        </a>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Url</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for website in  websites %}
            <tr>
                <th scope="row">{{ website.id }}</th>
                <td>{{ website.name }}</td>
                <td>{{ website.url }}</td>
                <td>
                    <a href="{{ path('admin.remove', {'id': website.id}) }}" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        Supprimer
                    </a>
                    <a href="{{ path('admin.edit', {'id': website.id}) }}" class="btn btn-info">
                        <i class="fas fa-edit"></i>
                        Editer
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#  {{ dump(websites) }} #}
</div>
{% endblock %}
