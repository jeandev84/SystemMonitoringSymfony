{% extends 'base.html.twig' %}

{% block title %}Show Website{% endblock %}

{% block body %}
    <div class="container">
        <h5 class="my-5 text-center">
            {{ website.name }}
        </h5>

        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Url</th>
                <th scope="col">Date</th>
                <th scope="col">Code HTTP</th>
                <th scope="col">Status</th>
            </tr>
            </thead>
            <tbody>
            {% for status in website.statuses %}
                <tr>
                    <th scope="row">{{ website.url }}</th>
                    <td>{{ status.reportedAt | date('Y-m-d') }}</td>
                    <td>{{ status.code }}</td>
                    <td>
                        {% if status.code == 200 or status.code == 301 or status.code == 302 %}
                            <i class="fas fa-check-circle"></i>
                        {% elseif status.code == 404 %}
                            <i class="fas fa-exclamation-triangle"></i>
                        {% else %}
                            <i class="fas fa-exclamation-circle"></i>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
